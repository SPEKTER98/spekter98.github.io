---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/Hero-Background-video.mp4';
import styleGuideImage from '../assets/images/home/impresora ricoh.png';
import softwareImage from '../assets/images/home/representation-user-experience-interface-design.jpg';
import officeEquipmentImage from '../assets/images/home/office-equipment.jpg';
import Social from '@components/Social.astro';

const seoTitle = "Impresion y Tecnologia";
const seoDescription = "expertos en optimizar tus procesos documentales, reducir costos y mejorar la productividad empresarial";

const heroContent = {
    
    title:'LLeva tu empresa al siguiente nivel con nuestras soluciones',
    description: 'Somos expertos en optimizar tus procesos documentales, reducir costos y mejorar la productividad empresarial',
    buttons: [
        {
            text: 'Contactanos',
            link: '/contact',
            target: '_self'
        },
        
    ],
    backgroundVideo: heroImage,
    overlayOpacity: 0.4
}

const featuresSection = {
    eyebrow: "Nosotros",
    title: "Más de 25 años transformando empresas en Caracas y Venezuela",
    description: 'Desde nuestros inicios, hemos trabajado con pasión para ofrecer soluciones que simplifiquen la operación de empresas de todos los tamaños',
    features: featureLists.main.features,
   
}


const FooterCta = {
    eyebrow: "Unete a la comunidad",
    title: ' Listo para llevar tu empresa al siguiente nivel?',
    description: 'Unete a nuestra comunidad de clientes y da el salto que tu empresa necesita.',
    hideCta: false,
    button: {
        text: 'Contactanos',
        link: '/contact',
        target: '/contact',
        variant: 'primary' as const
    }
}

const printerSection = {
    eyebrow: "NUESTROS PRODUCTOS",
    headline: "Impresoras y Fotocopiadoras",
    subheadline: "Equipos multifuncionales Ricoh (colores y monocromáticos)",
    description: "Te ofrecemos rapidez, eficiencia, ahorro de energía",
    image: { 
        src: styleGuideImage,
        alt: "Featured image"
    },
    buttons: [
        {
            text: "Solicita una asesoría gratuita",
            link: "https://wa.me/584241596884",
            target: "_blank",
            variant: "primary" as const
        }
    ]
}

const softwareSection = {
    headline: "Software Empresarial",
    description: "ERP, soluciones de gestión documental y sistemas de seguridad IT",
    image: { 
        src: softwareImage,
        alt: "Featured image"
    },
    buttons: [
        {
            text: "Habla con nuestros asesores tecnológicos",
            link: "https://wa.me/584241596884",
            target: "_blank",
            variant: "primary" as const
        }
    ]
}

const officeEquipment = {
    headline: "Equipos de Oficina",
    description: "Escáneres,servidores,monitores y accesorios de computación",
    image: { 
        src: officeEquipmentImage,
        alt: "Featured image"
    },
    buttons: [
        {
            text: "Ve nuestro catalogo",
            link: "https://wa.me/584241596884",
            target: "_blank",
            variant: "primary" as const
        }
    ]
}

const sideBySideStats = {
    eyebrow: "Ejemplo de estadisticas",
    title: "Conoce nuestras estadisticas",
    description: "Hemos atendido a muchos clientes satisfechos y hemos logrado grandes resultados, conoce un poco de nuestros numeros",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "Casos de exito",
        description: "Hemos atendido a muchos clientes satisfechos y hemos logrado grandes resultados, conoce un poco de nuestros numeros",
        button: {
            text: "Conoce mas",
            link: "/contact",
            variant: "primary" as const
        }
    }
};

const mainCta = {
    title: "Quieres saber más sobre nuestras soluciones?",
    description: "Nuestro equipo de expertos estan aquí para llevar tu negocio al siguiente nivel",
    button: {
        text: "comunicate con nosotros",
        link: "https://wa.me/584241596884",
        variant: "primary" as const,
        target: "_blank" as const
    }
};


const logosSection = {
    eyebrow: "Nuestros Partners",
    logos: logoLists.main.logos
}

const faqsSection = {
    eyebrow: "FAQs",
    title: 'Preguntas frecuentes',
    description: 'Encuentra respuestas a las preguntas más comunes sobre nuestros productos y servicios',
    faqs: faqLists.main.faqs
}

const recentPostsSection = {
    eyebrow: "Ultimas entradas",
    title: "Unete a nuestro blog",
    description: "Explora nuestro Blog para que estes siempre actualizado con lo ultimo en tecnologia",
    button: {
            text: "Ver todos los posts",
            link: "/blog",
        variant: "primary" as const
    }
}

---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <CtaBanner content={mainCta} variant="contained" background="light" paddingBottom="base" />
    <SplitPanel content={printerSection} imagePosition="right" background="light" padding="base" />
    <SplitPanel content={softwareSection} imagePosition="left" background="light" padding="base" />
    <SplitPanel content={officeEquipment} imagePosition="right" background="light" padding="base" />
    <Logos content={logosSection} background="base" padding='small'/>
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={3} />
    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>